<%- include("../templates/encabezado.ejs")%>
<%- include("../templates/menu.ejs")%>
<div class="container" mt-3>
    <form action="/editarProducto" method="post">
        <div class="card">
            <div class="card-head">
                <h1>Modificar Producto</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" id="id" value="<%= produc.id%>">
                <input class="form-control mb-3" value="<%=produc.nombre %>" type="text" name="nombre" id="nombre" placeholder="Nombre" autofocus>
                <input class="form-control mb-3" value="<%=produc.categoria %>" type="text" name="categoria" id="categoria" placeholder="Categoria">
                <input class="form-control mb-3" value="<%=produc.precio %>" type="text" name="precio" id="precio" placeholder="Precio">
                <input class="form-control mb-3" value="<%=produc.foto %>" type="file" name="foto" id="foto" placeholder="foto">
            </div>
            <div class="card-footer">
                <button class="form-control btn btn-primary">Guardar Cambios</button>
            </div>
        </div>
    </form>
</div>
